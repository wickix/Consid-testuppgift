@model Service.Models.company
@{
    Layout = "~/Views/Shared/_testLayout.cshtml";
}

<div class="container" style="margin-top:20%;">

    <div>


            <img src="~/Images/LogoPlaceholder.jpg" class="img-circle" style="margin-top: 10%;" width="200" height="200" alt="..."><br /><br />



            <h2>@Model.Name</h2>
            <h4><b>Organization number:</b> @Model.OrganizationNumber</h4>
            <h4><b>Notes:</b> @Model.Notes</h4><br />
            <h4><b>Stores:</b> </h4>
            @foreach (var store in @Model.Stores)
            {
                <h5>@store.Name</h5>
            }<br />

        </div>



    <!-- Trigger the modal with a button -->
    <div class="row">
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#AddModal">Add</button>
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#EditModal">Edit</button>
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#DeleteModal">Delete</button><br /><br /><br />
    </div>


 @using (Html.BeginForm("AddCompany", "Company", FormMethod.Post, new { @class = "cmxform", id = "commentForm" }))
 {
    <fieldset>
        <div id="AddModal" class="modal fade" style="color:black; text-shadow:none;">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Add a company</h4>
                    </div>


                    <div class="modal-body">
                        <p>The company name:</p>
                        <input name="Name" id="cname" type="text" minlength="1" maxlength="100" required aria-required="true" class="error" aria-invalid="false" /><br /><br />
                        <p>Organizationnumber:</p>
                        <input name="OrganizationNr" type="number" minlength="1" required aria-required="true" @*class="error"*@ aria-invalid="false" /><br /><br />
                        <p>Notes:</p>
                        <textarea name="Notes" style="width:270px; height:100px;"></textarea>


                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal" style="border:solid 1px;">Close</button>
                            <button type="submit" class="btn btn-default" style="border:solid 1px; color: #5bc0de">Add</button>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </fieldset>
 }

    @using (Html.BeginForm("UpdateCompany", "Company", new { Model.Id }, FormMethod.Post, new { @class = "cmxform", id = "commentForm" }))
    {
        <fieldset>
            <div id="EditModal" class="modal fade" style="color:black; text-shadow:none;">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Edit @Model.Name</h4>
                        </div>

                        <div class="modal-body">
                            <p>The company name:</p>
                            <input name="Name" id="cname" type="text" value="@Model.Name" minlength="1" maxlength="100" required aria-required="true" class="error" aria-invalid="false"/><br/><br/>
                            <p>The company's organizationnumber:</p>
                            <input name="OrganizationNr" type="number" value="@Model.OrganizationNumber" /><br /><br />
                            <p>Information about the company:</p>
                            <textarea name="Notes" style="width:270px; height:100px;">value="@Model.Notes"</textarea><br /><br />
                           
                             <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal" style="border:solid 1px;">Close</button>
                                <button type="submit" class="btn btn-default" style="border:solid 1px; color:#5bc0de;">Edit</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </fieldset>
    }


    @using (Html.BeginForm("DeleteCompany", "Company", new { Model.Id }, FormMethod.Post))
    {
        <div id="DeleteModal" class="modal fade" role="dialog" style="color:black; text-shadow:none;">
            <div class="modal-dialog">


                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Do you really want to delete @Model.Name? <b style="color:#cc0000">All stores this company ownes will be deleted to!</b></h4>
                    </div>


                    <div class="modal-body">
                        <button type="button" class="btn btn-default" style="border:solid 1px;" data-dismiss="modal">Close</button>
                        <button type="submit" style="background-color:#cc0000; color:white;" class="btn btn-default">Delete</button>
                    </div>

                </div>

            </div>
        </div>
    }
</div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>

    <script>
        $("#commentForm").validate();

        jQuery.validator.addMethod("specialChar", function (value, element) {
            return this.optional(element) || /([0-9a-zA-Z åäöÅÄÖ])/.test(value);
        }, "No special characters are allowed");

        jQuery.validator.addMethod("onlyAlfa", function (value, element) {
            return this.optional(element) || /([a-zA-Z\s])$/.test(value);
        }, "No digits or special characters are allowed");

    </script>
