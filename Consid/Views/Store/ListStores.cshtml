@model List<Service.Models.store>
@using Service.Models;
@{
    ViewBag.Title = "Stores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<img src="~/Images/LogoPlaceholder.jpg" class="img-circle" width="150" height="150"/>*@



<div class="container col-md-6 col-md-pull-4">
    <div class="media">

        @foreach (var obj in Model)
            {        <div class="media-list">
            <img src="~/Images/LogoPlaceholder.jpg" class="img-circle" width="150" height="150" alt="...">
        </div>

        <div class="media-body">
            <a href="@Url.Action("ShowStore","Store", new { obj.Id})"><h2>@obj.Name</h2></a>
            <a href="@Url.Action("ShowCompany","Company", new { obj.Company.Id})"><h3>@obj.Company.Name</h3></a>
            <p>@obj.Address</p>
            <p>@obj.Zip</p>
            <p>@obj.City</p>
            <p>@obj.Country</p>
            <p>@obj.Latitude</p>
            <p>@obj.Longitude</p><br />
        </div>
        }


    </div>
</div>










